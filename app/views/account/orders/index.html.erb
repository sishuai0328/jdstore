<div class="row">
  <div class="container">
    <section id="product-content">
      <div class="products-box col-md-10 col-centered">
        <br>
        <p style="color:#212121;font-size:30px;text-align:center"><i class="fa fa-bars" aria-hidden="true"></i>订单详情</p>
        <% @orders.each do |order| %>
        <div class="product-box col-md-10 col-centered">
          <table class="table">
            <thead>
              <tr>
                <th style="text-align:center">订单编号</th>
                <th style="text-align:center">订单金额</th>
                <th style="text-align:center">订单日期</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td style="text-align:center"> <%= link_to(order.id, order_path(order.token)) %> </td>
                <td style="text-align:center">$ <%= order.total %></td>
                <td style="text-align:center"> <%= order.created_at.to_s(:long) %> </td>
              </tr>
            </tbody>
          </table>
        </div>
        <% end %>
      </div>
    </section>
  </div>
</div>
