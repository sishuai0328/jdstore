            <% if current_user.admin? %>
            <li>
              <%= link_to("商家界面", admin_products_path) %>
            </li>
            <% end %>
            <li>
              <%= link_to("我的收藏".html_safe, account_products_path) %>
            </li>
            <li>
              <%= link_to("订单列表", account_orders_path) %>
            </li>
            <li>
              <%= link_to(content_tag(:i, '登出', class: 'fa fa-sign-out'), destroy_user_session_path, method: :delete) %>
