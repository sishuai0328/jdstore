<div class="dropdown clearfix pull-left">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      排序
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
        <li>
          <%= link_to("价格从高到底", products_path(:order => "by_lower_bound")) %>
        </li>
        <li>
            <%= link_to("价格从低到高", products_path(:order => "by_upper_bound")) %>

        </li>
        <li>
          <%= link_to("最近发布", products_path ) %>
        </li>
    </ul>
</div>
<br>
<hr>
<div class="row">
<% if @products.present? %>
  <% @products.each do |product| %>
    <div class="col-xs-6 col-md-3">
      <%= link_to product_path(product) do %>
        <% if product.image.present? %>
          <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
        <% else %>
          <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
        <% end %>
      <% end %>
      <%= product.title %> ￥ <%= product.price %>
      <!--收藏-->
      <% if current_user && current_user.is_favorite_of?(product) %>
        <%= link_to unfavorite_product_path(product), method: :post do %><i class="fa fa-heart fa-lg" aria-hidden="true"></i><% end %>
      <% else %>
        <%= link_to favorites_product_path(product), method: :post do %><i class="fa fa-heart-o fa-lg" aria-hidden="true"></i><% end %>
      <% end %>
    </div>
  <% end %>
  <% else %>
    <p> There are no products containing the"<%= params[:search] %>".</p>
  <% end %>
</div>
